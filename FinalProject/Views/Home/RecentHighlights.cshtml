@model List<Highlight>

@{
    ViewData["Title"] = "RecentHighlights";
}

@{
    List<Highlight> fullList = Model;
    var firstFiveHighlights = fullList.Take(5);
    fullList.RemoveRange(0, 4);
    }

<h1 style="text-align:center">Recent Football Highlights</h1>

<table class="table">
    <thead>
        <tr style="text-align:center">
            <th>
                Match
            </th>
            <th style="padding: 2px 200px 2px 200px;">
                Highlight Video
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in firstFiveHighlights)
        {
            <tr style="text-align:center">
                <td>
                    @Html.DisplayFor(modelItem => item.competition.name)
                    <br />
                    @Html.DisplayFor(modelItem => item.title)
                    <br />
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    @foreach (var v in item.videos)
                    {
                        @Html.Raw(v.embed)
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
